<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigman.iotctrl.iotctrl.cmdFrag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navCmd_btnConn"
                android:text="Connect"
                android:layout_below="@+id/navCmd_btnPub"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/navCmd_InpCmd"
                android:hint="input cmd here"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="90dp"
                android:layout_toLeftOf="@+id/navCmd_btnPub"
                android:layout_toStartOf="@+id/navCmd_btnPub" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navCmd_btnPub"
                android:text="Publish"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/navCmd_btnConn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ScrollView
                    android:id="@+id/navCmd_scrlView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/navCmd_txtLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Log Activity"
                        android:inputType="textMultiLine"
                        android:layout_marginTop="5dp" />
                </ScrollView>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
